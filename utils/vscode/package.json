{
  "name": "carbon-lang",
  "displayName": "carbon-lang",
  "description": "Carbon Language support",
  "version": "0.0.2",
  "publisher": "carbon-language",
  "repository": {
    "url": "https://github.com/carbon-language/carbon-lang"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "type": "commonjs",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "carbon",
        "aliases": [
          "Carbon"
        ],
        "extensions": [
          ".carbon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "carbon",
        "scopeName": "source.carbon",
        "path": "./carbon.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "carbon",
        "path": "./carbon.code-snippets"
      }
    ]
  },
  "keywords": [
    "carbon",
    "snippets"
  ],
  "scripts": {
    "package": "mkdir -p out && vsce package -o out/carbon.vsix"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@vscode/vsce": "^2.27.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@types/vscode": "^1.94.0",
    "@vscode/vsce": "^2.27.0",
    "vscode": "^1.1.34",
    "vscode-languageclient": "^9.0.1"
  }
}
