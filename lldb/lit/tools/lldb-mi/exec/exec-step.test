# CHECK: ^error,msg="Command 'exec-step'. Thread ID invalid"

-exec-step --thread 1
# CHECK: ^running
# CHECK: *stopped,reason="end-stepping-range"

-exec-step
# Check that exec-step can step-in in a selected thread.
# CHECK: ^running
# CHECK: *stopped,reason="end-stepping-range"
