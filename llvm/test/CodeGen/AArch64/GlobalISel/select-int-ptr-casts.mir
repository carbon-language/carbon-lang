# CHECK:    %0 = COPY %x0
# CHECK:    %1 = COPY %0.sub_32
body:             |
  bb.0:
    liveins: %x0
    %0(p0) = COPY %x0
    %1(s32) = G_PTRTOINT %0
    %w0 = COPY %1(s32)
