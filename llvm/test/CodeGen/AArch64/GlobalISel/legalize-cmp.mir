# RUN: llc -O0 -run-pass=legalize-mir -global-isel %s -o - 2>&1 | FileCheck %s

--- |
  target datalayout = "e-m:o-i64:64-i128:128-n32:64-S128"
  target triple = "aarch64-apple-ios"
  define void @test_icmp() {
  entry:
    ret void
  }
...

---
name:            test_icmp
registers:
  - { id: 0, class: _ }
  - { id: 1, class: _ }
  - { id: 2, class: _ }
  - { id: 3, class: _ }
  - { id: 4, class: _ }
  - { id: 5, class: _ }
  - { id: 6, class: _ }
  - { id: 7, class: _ }
  - { id: 8, class: _ }
body: |
  bb.0.entry:
    liveins: %x0, %x1, %x2, %x3
    %0(s64) = COPY %x0
    %1(s64) = COPY %x0

    %2(s8) = G_TRUNC %0
    %3(s8) = G_TRUNC %1

    ; CHECK: %4(s1) = G_ICMP intpred(sge), %0(s64), %1
    %4(s1) = G_ICMP intpred(sge), %0, %1

    ; CHECK: [[LHS32:%[0-9]+]](s32) = G_ZEXT %2
    ; CHECK: [[RHS32:%[0-9]+]](s32) = G_ZEXT %3
    ; CHECK: %8(s1) = G_ICMP intpred(ult), [[LHS32]](s32), [[RHS32]]
    %8(s1) = G_ICMP intpred(ult), %2, %3
...
