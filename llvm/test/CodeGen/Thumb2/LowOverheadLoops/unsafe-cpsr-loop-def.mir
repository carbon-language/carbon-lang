  declare i32 @llvm.loop.decrement.reg.i32.i32.i32(i32, i32) #0

  ; Function Attrs: nounwind
  declare void @llvm.stackprotector(i8*, i8**) #1

  attributes #0 = { noduplicate nounwind }
  attributes #1 = { nounwind }

