# CHECK-NEXT: Function:        fun0
# CHECK-NEXT: Args:
# CHECK-NEXT:   - NumStackBytes:   '8'
# CHECK-NEXT:   - String:          ' stack bytes in function'
# CHECK-NEXT: ...

constants:
body:             |
  bb.0:
    RETQ

