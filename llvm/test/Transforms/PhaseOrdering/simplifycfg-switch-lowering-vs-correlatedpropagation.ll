; CHECK-NEXT:    [[TMP0:%.*]] = icmp eq i64 [[X]], 100
; CHECK-NEXT:    [[DOT:%.*]] = select i1 [[TMP0]], i64 200, i64 10
; CHECK-NEXT:    [[COMMON_RET_OP:%.*]] = select i1 [[SWITCH]], i64 0, i64 [[DOT]]
; CHECK-NEXT:    ret i64 [[COMMON_RET_OP]]
;
