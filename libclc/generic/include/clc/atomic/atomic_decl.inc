	_CLC_OVERLOAD _CLC_DECL TYPE __CLC_FUNCTION (volatile ADDRSPACE TYPE *, TYPE);

#define __CLC_DECLARE_ATOMIC_ADDRSPACE(TYPE) \
	__CLC_DECLARE_ATOMIC(global, TYPE) \
	__CLC_DECLARE_ATOMIC(local, TYPE)

