# RUN: lld -core -layout-pass=true %s | FileCheck %s -check-prefix=CHKORDER

---
defined-atoms:   
  - name:            fn
    scope:           global
    references:      
      - kind:            layout-after
        offset:          0
        target:          fn1
  - name:            fn1
    scope:           global
    references:      
      - kind:            layout-after
        offset:          0
        target:          fn2
  - name:            fn2
    scope:           global
    references:      
      - kind:            layout-after
        offset:          0
        target:          fn3
  - name:            fn3
    scope:           global
...

