# Check that LLD shows an error if jalx target value is not word-aligned.

# RUN: yaml2obj -format=elf %s > %t-obj
# RUN: not lld -flavor old-gnu -target mipsel -e T0 -o %t-exe %t-obj 2>&1 \
# RUN:       | FileCheck %s

# CHECK: The jalx target 0x{{[0-9a-f]+}} is not word-aligned

!ELF
FileHeader: !FileHeader
  Class:   ELFCLASS32
  Data:    ELFDATA2LSB
  Type:    ET_REL
  Machine: EM_MIPS
  Flags:   [ EF_MIPS_CPIC, EF_MIPS_ABI_O32, EF_MIPS_ARCH_32R2,
             EF_MIPS_MICROMIPS ]

Sections:
- Name:         .text
  Type:         SHT_PROGBITS
  Size:         8
  AddressAlign: 16
  Flags:        [ SHF_ALLOC, SHF_EXECINSTR ]

- Name: .rel.text
  Type: SHT_REL
  Info: .text
  AddressAlign: 4
  Relocations:
    - Offset: 0
      Symbol: T1
      Type:   R_MICROMIPS_26_S1

Symbols:
  Global:
    - Name:    T0
      Section: .text
      Type:    STT_FUNC
      Value:   0
      Size:    4
      Other:   [ STO_MIPS_MICROMIPS ]
    - Name:    T1
      Section: .text
      Type:    STT_FUNC
      Value:   6
      Size:    2
