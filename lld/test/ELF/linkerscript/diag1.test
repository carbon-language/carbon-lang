# REQUIRES: x86
# RUN: llvm-mc -filetype=obj -triple=x86_64-unknown-linux /dev/null -o %t.o
# RUN: not ld.lld -shared %t.o -o /dev/null --script %s 2>&1 | FileCheck -strict-whitespace %s

SECTIONS {
  .text + { *(.text) }
  .keep : { *(.keep) } /*
  comment line 1
  comment line 2 */
  .temp : { *(.temp) }
}

CHECK:      6: malformed number: +
CHECK-NEXT: >>>   .text + { *(.text) }
CHECK-NEXT: >>>         ^
