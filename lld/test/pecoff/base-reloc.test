BASEREL:      BaseReloc [
BASEREL-NEXT:   Entry {
BASEREL-NEXT:     Type: HIGHLOW
BASEREL-NEXT:     Address: 0x2007
BASEREL-NEXT:   }
BASEREL-NEXT:   Entry {
BASEREL-NEXT:     Type: HIGHLOW
BASEREL-NEXT:     Address: 0x200C
BASEREL-NEXT:   }
BASEREL-NEXT: ]

NOBASEREL:      BaseReloc [
NOBASEREL-NEXT: ]

