# RUN: lld -core --add-pass layout %s | FileCheck %s -check-prefix=CHKORDER

---
defined-atoms:   
  - name:            A
    scope:           global
    references:      
      - kind:            layout-after
        offset:          0
        target:          B
  - name:            B
    scope:           global
    references:      
      - kind:            in-group
        offset:          0
        target:          A
      - kind:            layout-after
        offset:          0
        target:          E
  - name:            F
    scope:           global
    references:      
      - kind:            in-group
        offset:          0
        target:          E
      - kind:            layout-after
        offset:          0
        target:          G
  - name:            G
    scope:           global
    references:      
      - kind:            in-group
        offset:          0
        target:          E
  - name:            E
    scope:           global
    references:      
      - kind:            in-group
        offset:          0
        target:          A
      - kind:            layout-after
        offset:          0
        target:          F
...

