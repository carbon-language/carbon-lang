  Type:          ET_REL
  Machine:       EM_X86_64
Sections:
  - Name:        .text
    Type:        SHT_PROGBITS
    Flags:       [ SHF_ALLOC, SHF_EXECINSTR ]
  - Name:        .rela.text
    Type:        SHT_RELA
    Info:        .text
