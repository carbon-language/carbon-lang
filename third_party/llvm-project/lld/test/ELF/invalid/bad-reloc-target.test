  - Name:        .rela.text
    Type:        SHT_RELA
    Link:        .symtab
    Info:        99
    Relocations: 
      - Symbol:  foo
        Type:    R_X86_64_64
Symbols:         
  - Name:        foo
    Binding:     STB_GLOBAL

