# REQUIRES: x86
# RUN: echo ".global foo; foo = 0x123" | llvm-mc -filetype=obj -triple=x86_64-pc-linux - -o %t.o
# RUN: ld.lld -o %t.so --script %s %t.o -shared
# RUN: llvm-readobj --symbols %t.so | FileCheck %s

SECTIONS {
  .text : {
    bar1 = ALIGNOF(.text);
    bar2 = CONSTANT (MAXPAGESIZE);
    bar3 = SIZEOF (.text);
    bar4 = SIZEOF_HEADERS;
    bar5 = 0x42;
    bar6 = foo + 1;
    *(.text)
  }
}

