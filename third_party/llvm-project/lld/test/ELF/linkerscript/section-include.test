MEMORY {
  ROM (rwx): ORIGIN = 0x1000, LENGTH = 0x100
  RAM (rwx): ORIGIN = 0x2000, LENGTH = 0x100
}

SECTIONS {
  .text : { *(.text*) } > ROM
  .data : { *(.data*) } > RAM
  INCLUDE "inc.script"
  .data3 : { QUAD(0) } > RAM
}
