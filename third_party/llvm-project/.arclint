{
  "linters": {
    "clang-format": {
      "type": "script-and-regex",
      "script-and-regex.script": "bash utils/arcanist/clang-format.sh",
      "script-and-regex.regex": "/^(?P<severity>[[:alpha:]]+)\n(?P<message>[^\n]+)\n(====|(?P<line>\\d),(?P<char>\\d)\n(?P<original>.*)>>>>\n(?P<replacement>.*)<<<<\n)$/s",
      "include": [
        "(\\.(cc|cpp|h)$)"
      ],
      "exclude": [
        "(^clang/test/)"
      ]
    }
  }
}
