// CHECK-NEXT:        "character": 0,
// CHECK-NEXT:        "line": 3
// CHECK-NEXT:      }
// CHECK-NEXT:    }
// CHECK-NEXT:  }
// -----
// Hover on a Block argument.
{"jsonrpc":"2.0","id":4,"method":"textDocument/hover","params":{
  "textDocument":{"uri":"test:///foo.mlir"},
  "position":{"line":0,"character":12}
}}
//      CHECK:  "id": 4,
// CHECK-NEXT:  "jsonrpc": "2.0",
// CHECK-NEXT:  "result": {
