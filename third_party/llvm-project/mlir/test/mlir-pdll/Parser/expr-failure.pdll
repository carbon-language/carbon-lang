// RUN: not mlir-pdll %s -split-input-file 2>&1 | FileCheck %s

//===----------------------------------------------------------------------===//
// Reference Expr
//===----------------------------------------------------------------------===//

Pattern {
  // CHECK: expected identifier constraint
  let foo = Foo: ;
}

// -----

Pattern {
  // CHECK: undefined reference to `bar`
  let foo = bar;
}

// -----

Pattern FooPattern {
  erase _: Op;
}

Pattern {
  // CHECK: invalid reference to `FooPattern`
  let foo = FooPattern;
}

// -----

Pattern {
  // CHECK: expected `:` after `_` variable
  let foo = _;
}

// -----

Pattern {
  // CHECK: expected identifier constraint
  let foo = _: ;
}

