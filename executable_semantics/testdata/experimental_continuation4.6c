// Test copying a continuation.

fn main() -> Int {
  var Int: x = 0;
  __continuation k1 {
    x = x + 1;
    __await;
    x = x + 2;
  }
  var __Continuation: k2 = k1;
  __run k1;
  __run k2;
  return x;
}
