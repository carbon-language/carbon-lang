// Test access to block-scoped variables upon resuming a continuation.

fn main() -> Int {
   var Int: x = 1;
   __delimit {
     var Int: y = 2;
     __yield 0;
     x = x + y;
   } __catch(_, k) {
     __resume k;
   }
   return x - 3;
}
