// Test the way in which copying of continuations interacts with data
// such as the variable `x`. For now, stack data is not copied.

fn f(__Continuation: s1, __Continuation: s2) -> Int {
  __delimit {
    __resume s1;
  } __catch (v, s) {
  }

  __delimit {
    __resume s2;
  } __catch (v, s) {
    return v;
  }
}

fn main() -> Int {
  __delimit {
    var Int: x = 0;
    __yield 0;
    x = x + 1;
    __yield x;
    return -1;
  } __catch (_, s) {
    return f(s, s);
  }
}
