// Test that a delimited continuation can be resumed at the point
// where the last yield occurred and that upon completion of the
// continuation, control returns to the statement after the `__resume`.

fn main() -> Int {
  var Int: x = 0;
  __delimit {
    x = x + 1;
    __yield 2;
    x = x + 3;
  } __catch (v, k) {
    x = x + v;
    __resume k;
    x = x + 4;
  }
  return x - 10;
}
