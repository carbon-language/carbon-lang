CHECK-INPUT-NEXT:  DW_CFA_def_cfa_offset: +40
CHECK-INPUT-NEXT:  DW_CFA_offset: reg3 -40
CHECK-INPUT-NEXT:  DW_CFA_advance_loc: 6
CHECK-INPUT-NEXT:  DW_CFA_def_cfa_offset: +48

CHECK-OUTPUT:  DW_CFA_advance_loc: 4
